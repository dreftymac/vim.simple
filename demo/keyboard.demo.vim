" -------------------------------------------------------------------
" preferences.keyboard

  " ********************
  " ESC key alternative
  " substitute for the long reach to ESC
  inoremap jk <esc>l

  " ********************
  " backspace key
  " allow backspacing over everything in insert mode
  set backspace=indent,eol,start
  
  " ********************
  " cursor wrapping
  " wrapping behavior of cursor
  set whichwrap=<,>,h,l,[,]
